<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layout_marginTop="?actionBarSize"
    tools:context="com.media_mosaic.httpwww.doubloons.Fragments.Create_Single_doubllon_fragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollIndicators="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:gravity="center_horizontal"
            android:paddingRight="24dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/step_layout"
                android:visibility="gone"
                android:weightSum="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:paddingLeft="5dp"
                    android:text="Step :"
                    android:textSize="@dimen/xlarge_text"
                    android:inputType="text"
                    android:drawablePadding="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:paddingLeft="5dp"
                    android:id="@+id/steps_coun"
                    android:textSize="@dimen/xlarge_text"
                    android:inputType="number"
                    android:text="1"
                    android:drawablePadding="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                   />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/xxlarge_text"
                android:textStyle="normal"
                android:id="@+id/title_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:text="@string/app_name"/>
            <EditText
                android:id="@+id/doubloon_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/sub_doubloon"
                android:inputType="text"
                android:textSize="16dp"
                android:scrollbars="vertical"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/expity_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/expiry_Date"
                android:inputType="text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textSize="16dp"
                android:drawableRight="@drawable/date_range"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_gravity="center"
                android:layout_marginTop="-1dp"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="5dp"
                android:visibility="visible"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent" />
            <TextView
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/description"
                android:layout_gravity="left|center"
                android:drawableRight="@drawable/edit_icon"
                android:inputType="text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="5dp"
                android:visibility="visible"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent" />
            <TextView
                android:id="@+id/clues_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/clues"
                android:drawableRight="@drawable/edit_icon"
                android:inputType="text"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="5dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_gravity="center"
                android:layout_marginTop="-1dp"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="5dp"
                android:visibility="visible"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/sponsored_lay"
                android:weightSum="2">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="Sponsor Name"
                    android:id="@+id/sponser_name"
                    android:inputType="text"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/xxlarge_text"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"
                android:text="@string/location"/>
            <EditText
                android:id="@+id/flat_no"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/flat_Number"
                android:inputType="text"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/locality_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/locality"
                android:inputType="text"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

          <!--  <EditText
                android:id="@+id/country_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/country"
                android:inputType="text"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/state_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/province"
                android:inputType="text"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/country_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="4.5"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/country"
                android:inputType="text"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />


            <Spinner
                android:id="@+id/country"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="2dp"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:backgroundTint="@color/white"
                android:popupBackground="@color/colorAccent"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/state_text"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/province"
                android:inputType="text"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <Spinner
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:backgroundTint="@color/white"
                android:popupBackground="@color/colorAccent"
                />

        </LinearLayout>
            <EditText
                android:id="@+id/city_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/city"
                android:inputType="text"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/price_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/prize"
                android:inputType="textEmailAddress"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/number_person"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/number_of_people"
                android:inputType="number"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/add_img"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/uploadimagsbackground"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:hint="ADD IMAGE "
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/xlarge_text" />

                <TextView
                    android:id="@+id/add_video"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:hint="ADD VIDEO "
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/xlarge_text"
                    android:inputType="number"
                    android:drawablePadding="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/uploadimagsbackground" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:id="@+id/mAvatarImage"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/upload_img_video"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="2"
                    android:hint="UPLOAD"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/colorAccent"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/xlarge_text"
                    android:inputType="number"
                    android:drawablePadding="5dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/uploadimagsbackground" />

            </LinearLayout>

            <Button
                android:id="@+id/continue_button"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="@string/post"
                android:backgroundTint="@color/log_in"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_code"
                android:editable="false"
                android:enabled="false"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:inputType="textMultiLine"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/min_small_text"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="35dp"
                android:text="@string/copy_right"
                android:textColorHint="@color/white" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>
