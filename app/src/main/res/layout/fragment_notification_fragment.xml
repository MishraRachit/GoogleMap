<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:layout_marginTop="?actionBarSize"
    tools:context="com.media_mosaic.httpwww.doubloons.Fragments.Notification_fragment">
    <com.facebook.shimmer.ShimmerFrameLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/shimmer_view_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="5">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.4"
                        android:background="@color/shimmer_background_color"
                        android:gravity="center|left"
                        android:layout_margin="2dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large_text" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_weight="2.6"
                        android:layout_margin="2dp"
                        android:background="@color/shimmer_background_color"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_code"
                        android:textSize="@dimen/medium_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/shimmer_background_color"
                        android:gravity="center|left"
                        android:layout_margin="2dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    android:weightSum="4.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/green"
                        android:textSize="@dimen/medium_text" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/notification_background"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium_text" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@color/notification_background"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textSize="@dimen/medium_text" />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1.5"
                        android:background="@color/notification_background"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/inflateview"
        android:visibility="gone"
        android:weightSum="10"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/my_notification_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            />



    </LinearLayout>


</FrameLayout>
