<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">




            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:weightSum="5"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_weight="4"
                        android:id="@+id/main_logo_img"
                        android:layout_margin="5dp"
                        android:src="@drawable/green_nav_lag"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_height="30dp"
                        android:text="Active"
                        android:textSize="@dimen/small_text"
                        android:id="@+id/active_text"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:drawableLeft="@drawable/dot_green"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_height="30dp"
                        android:text="Inactive"
                        android:textSize="@dimen/small_text"
                        android:id="@+id/inactive_text"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:drawableLeft="@drawable/dot_red"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="0dp"
                        android:weightSum="5"
                        android:layout_weight="0.8">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="MOSAIC DOUBLOON "
                            android:textSize="@dimen/large_text"
                            android:id="@+id/doubloons_name"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:layout_weight="4"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:id="@+id/info_img"
                            android:src="@drawable/ic_info_icon"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="0dp"
                        android:weightSum="5"
                        android:id="@+id/address_layout"
                        android:visibility="visible"
                        android:layout_weight="0.8">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Address : "
                            android:textSize="@dimen/medium_text"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:layout_weight="1.2"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text=""
                            android:maxLines="2"
                            android:id="@+id/address_text"
                            android:textSize="@dimen/medium_text"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:singleLine="true"
                            android:textColor="@color/text_code"
                            android:layout_weight="3.8"/>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="0dp"
                        android:weightSum="5"
                        android:visibility="gone"
                        android:id="@+id/price_layout"
                        android:layout_weight="0.8">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Treasure : "
                            android:textSize="@dimen/medium_text"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:textColor="@color/black"
                            android:layout_weight="1.2"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text=""
                            android:maxLines="2"
                            android:id="@+id/price_doubloon"
                            android:textSize="@dimen/medium_text"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:textColor="@color/text_code"
                            android:layout_weight="3.8"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="5">



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="0dp"
                        android:weightSum="5"
                        android:visibility="gone"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Price : "
                            android:textSize="@dimen/small_text"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Gold Coin ,Diamond Ring"
                            android:textSize="@dimen/small_text"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:textColor="@color/text_code"
                            android:layout_weight="4"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="0dp"
                        android:weightSum="5"
                        android:layout_weight="2">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:weightSum="5"
                            android:layout_weight="1.2">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:layout_margin="5dp"
                                android:src="@drawable/date_time"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:id="@+id/date_time"
                                android:gravity="left|center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/min_small_text" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:weightSum="5"
                            android:layout_weight="1.2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="5"
                                >
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:src="@drawable/running"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="0"
                                    android:textSize="@dimen/xxlarge_text"
                                    android:id="@+id/runing_text"
                                    android:layout_gravity="center"
                                    android:gravity="left|center"
                                    android:paddingLeft="5dp"
                                    android:textColor="@color/black"
                                    android:layout_weight="3"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/runing_text_hading"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="Running"
                                android:textSize="@dimen/small_text"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_weight="3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:weightSum="5"
                            android:layout_weight="1.2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="5"
                                >
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:src="@drawable/success"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="0"
                                    android:textSize="@dimen/xxlarge_text"
                                    android:id="@+id/success_text"
                                    android:layout_gravity="center"
                                    android:paddingLeft="5dp"
                                    android:gravity="left|center"
                                    android:textColor="@color/black"
                                    android:layout_weight="3"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="Success"
                                android:textSize="@dimen/small_text"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_weight="3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:weightSum="5"
                            android:layout_weight="1.2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="5"
                                >

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:id="@+id/dayleft_text"
                                    android:textSize="@dimen/medium_text"
                                    android:layout_gravity="center"
                                    android:gravity="left|center"
                                    android:paddingLeft="5dp"
                                    android:textColor="@color/black"
                                    android:layout_weight="5"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="Days Left"
                                android:id="@+id/day_left_text"
                                android:textSize="@dimen/small_text"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:paddingLeft="5dp"
                                android:textColor="@color/black"
                                android:layout_weight="3"/>
                        </LinearLayout>

                        <!--
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:orientation="vertical"
                                            android:layout_height="match_parent"
                                            android:weightSum="5"
                                            android:layout_weight="1.4">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="0dp"
                                                android:text=""
                                                android:id="@+id/dayleft_text"
                                                android:textSize="@dimen/small_text"
                                                android:layout_gravity="bottom"
                                                android:gravity="bottom|center"
                                                android:layout_marginBottom="10dp"
                                                android:textColor="@color/black"
                                                android:layout_weight="5"/>
                                        </LinearLayout>
                        -->

                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:weightSum="5"
                            android:visibility="gone"
                            android:layout_weight="1.4">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="Expired "
                                android:textSize="@dimen/min_small_text"
                                android:layout_gravity="bottom"
                                android:gravity="bottom|center"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black"
                                android:layout_weight="5"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>






            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="5dp"
                android:visibility="visible"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/hint_text" />



        </android.support.v7.widget.CardView>



    </RelativeLayout>


</LinearLayout>