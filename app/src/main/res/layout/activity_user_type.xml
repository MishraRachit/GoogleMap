<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash"
    tools:context="com.media_mosaic.httpwww.doubloons.Activitys.UserTypeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:layout_marginBottom="30dp"
    android:orientation="vertical">
    <Button
        android:id="@+id/player"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sign_in"
        android:text="@string/player_login"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />

    <Button
        android:id="@+id/partner"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/log_in"
        android:text="@string/partner_login"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:layout_marginBottom="50dp"
        android:paddingRight="30dp" />

</LinearLayout>
</LinearLayout>
