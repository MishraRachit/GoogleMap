<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:id="@+id/partner_login_main"
    tools:context="com.media_mosaic.httpwww.doubloons.Activitys.Host_login">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollIndicators="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="22dp"
            android:gravity="center_horizontal"
            android:paddingRight="22dp"
            android:layout_marginBottom="50dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logo_login" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/email"
                android:id="@+id/partner_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/hint_text"
                android:drawableLeft="@drawable/email_icon"
                android:textColorHint="@color/hint_text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/MyEditTextTheme"
                android:hint="@string/password"
                android:id="@+id/partner_password"
                android:inputType="textPassword"
                android:textColor="@color/hint_text"
                android:drawableLeft="@drawable/password_icon"
                android:textColorHint="@color/hint_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/remember_icon"
                    android:text="@string/remember_me"
                    android:fontFamily="@fonts/aaa"
                    android:textColor="@color/hint_text" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:backgroundTint="@color/text_code"
                    android:drawableBottom="@color/white"
                    android:gravity="right"
                    android:id="@+id/txtForgotPassword"
                    android:text="@string/forgot_Password"
                    android:fontFamily="@fonts/aaa"
                    android:textColor="@color/hint_text" />

            </LinearLayout>

            <Button
                android:id="@+id/partner_login"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="SIGN IN"
                android:backgroundTint="@color/sign_in"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="SIGN UP"
                android:id="@+id/partner_signup"
                android:backgroundTint="@color/log_in"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>
