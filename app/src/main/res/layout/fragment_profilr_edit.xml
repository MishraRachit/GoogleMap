<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clickable="true"
    tools:context="com.media_mosaic.httpwww.doubloons.Fragments.Profilr_edit">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollIndicators="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:gravity="center_horizontal"
                android:paddingRight="24dp"
                android:layout_marginBottom="50dp"
                android:paddingTop="56dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/logo_login" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/name"
                    android:id="@+id/name_text"
                    android:inputType="text"
                    android:textSize="@dimen/xlarge_text"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/user_icon"
                    android:theme="@style/MyEditTextTheme"
                    android:textColorHint="@color/white"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/email"
                    android:id="@+id/email_text"
                    android:inputType="text"
                    android:textSize="@dimen/xlarge_text"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/email_icon"
                    android:textColorHint="@color/white"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/phone_no"
                    android:id="@+id/phone_no_text"
                    android:textSize="@dimen/xlarge_text"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/phone_icon"
                    android:textColorHint="@color/white" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/dob"
                    android:id="@+id/dob_text"
                    android:textSize="@dimen/xlarge_text"
                    android:inputType="text"
                    android:drawableRight="@drawable/date_range"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/user_icon"
                    android:textColorHint="@color/white" />

                <Spinner
                    android:id="@+id/intrest_spinner"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:popupBackground="@color/colorAccent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dip"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/existing_password"
                    android:drawableLeft="@drawable/password_icon"
                    android:inputType="textPassword"
                    android:textSize="@dimen/xlarge_text"
                    android:id="@+id/old_password"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/new_password"
                    android:id="@+id/new_password"
                    android:drawableLeft="@drawable/password_icon"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xlarge_text"
                    android:textColorHint="@color/white" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/address"
                    android:id="@+id/address_text_profile"
                    android:inputType="text"
                    android:visibility="gone"
                    android:textSize="@dimen/xlarge_text"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/address_icon"
                    android:textColorHint="@color/white" />
                <Spinner
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:popupBackground="@color/colorAccent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dip"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent" />
                <Spinner
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:layout_marginTop="5dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:backgroundTint="@color/white"
                    android:popupBackground="@color/colorAccent"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dp"
                    android:visibility="visible"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorAccent" />
               <!-- <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/country"
                    android:inputType="text"
                    android:textSize="16dp"
                    android:id="@+id/country_text"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/country_icon"
                    android:textColorHint="@color/white" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/state"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/state_icon"
                    android:inputType="text"
                    android:textColorHint="@color/white" />-->

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:theme="@style/MyEditTextTheme"
                    android:hint="@string/city"
                    android:id="@+id/city_text"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:textSize="@dimen/xlarge_text"
                    android:drawableLeft="@drawable/city_icon"
                    android:textColorHint="@color/white" />


                <Button
                    android:id="@+id/Uplate_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="UPDATE"
                    android:backgroundTint="@color/log_in"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_code"
                    android:editable="false"
                    android:enabled="false"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:inputType="textMultiLine"
                    android:textSize="@dimen/min_small_text"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/copy_right"
                    android:textColorHint="@color/white" />
            </LinearLayout>
        </ScrollView>



</FrameLayout>
